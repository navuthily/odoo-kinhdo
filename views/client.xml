<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="client_tree_view" model="ir.ui.view">
            <field name="name">client.tree.view</field>
            <field name="model">client</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sdt"/>
                    <field name="gioi_tinh"/>
                    <field name="dia_chi"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>
        <record id="client_form_view" model="ir.ui.view">
            <field name="name">client.form.view</field>
            <field name="model">client</field>
            <field name="arch" type="xml">
                <form string="Mới">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sdt"/>
                            <field name="gioi_tinh"/>
                            <field name="dia_chi"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_khach_hang" model="ir.actions.act_window">
            <field name="name">Khách hàng</field>
            <field name="res_model">client</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('client_tree_view')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('client_form_view')})]"/>
        </record>
        <menuitem id="menu_insurance_receive"
                  name="Bán hàng"
                  action="action_khach_hang"
                  sequence="10"
                  groups="base.group_user"/>

        <menuitem action="action_khach_hang"
                  id="menu_client"
                  name="Khách hàng"
                  parent="menu_insurance_receive"
                  sequence="1"/>

    </data>
</odoo>