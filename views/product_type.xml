<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_type_tree_view" model="ir.ui.view">
            <field name="name">product.type.tree.view</field>
            <field name="model">product.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_type_code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_type_form_view" model="ir.ui.view">
            <field name="name">product.type.form.view</field>
            <field name="model">product.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="product_type_code"/>
                            </group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_product_type_stock" model="ir.actions.act_window">
            <field name="name">Loại hàng</field>
            <field name="res_model">product.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_product_type_stock"
                name="Loại hàng"
                action="action_product_type_stock"
                parent="menu_insurance_receive"
                sequence="3"/>

        <record id="action_product_type_accounting" model="ir.actions.act_window">
            <field name="name">Loại hàng</field>
            <field name="res_model">product.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_product_type_accounting"
                name="Loại hàng"
                action="action_product_type_accounting"
                parent="account.account_management_menu"
                sequence="11"/>

        <!-- Filter & Search -->
        <record id="product_type_search_code" model="ir.ui.view">
            <field name="name">product.type.search.code</field>
            <field name="model">product.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="product_type_code" string="Mã loại hàng"
                           filter_domain="[('product_type_code', 'ilike', self)]"/>
                    <field name="name" string="Tên loại hàng" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="description" string="Diễn giải" filter_domain="[('description', 'ilike', self)]"/>
                    <separator/>
                    <filter string="Lưu trữ" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>