<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_quotation_form_view" model="ir.ui.view">
            <field name="name">Sale quotation</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Pet Name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Kittie"/></h1>
                            <label for="partner_id"/>
                            <h3><field name="partner_id"/></h3>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_quotation_tree_view" model="ir.ui.view">
            <field name="name">sale.quotation.tree.view</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <tree string="Na__" default_order="create_date desc">
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>

        <record id="action_sale_kd" model="ir.actions.act_window">
            <field name="name">Kinhdo </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">super.pet</field>
            <!-- <field name="view_type">form</field> --> <!-- Odoo 13 has removed this field -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sale_quotation_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('sale_quotation_form_view')})]"/>
        </record>

        <menuitem id="menu_sale_kd"
            name="Kinhdo Sale"
            action="action_sale_kd"
            sequence="10"
            groups="base.group_user"/>
    </data>
</odoo>
